<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".client.ScheduleArea">

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="13dp"
        android:text="Select time:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar" />

    <Spinner
        android:id="@+id/timeSpin"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTV"></Spinner>

    <Button
        android:id="@+id/bReserve"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="76dp"
        android:layout_marginLeft="79dp"
        android:layout_marginRight="76dp"
        android:layout_marginStart="79dp"
        android:text="Reserve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pickedateTV"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text=""
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/timeTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/clientName"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:text=""
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar"
        android:layout_width="339dp"
        android:layout_height="321dp"
        android:layout_margin="20dp"
        android:layout_marginTop="65dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>